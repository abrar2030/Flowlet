# Flowlet Backend Environment Variables Example
# Copy this file to .env and update with your values

# Core Settings
SECRET_KEY=your-secret-key-change-in-production
FLASK_ENV=development
FLASK_CONFIG=development

# Database
DATABASE_URL=sqlite:///./database/app.db
# For PostgreSQL: postgresql://user:password@localhost/dbname

# Redis (optional for production features)
REDIS_URL=redis://localhost:6379/0

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=86400

# CORS Origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# External Services
OPENAI_API_KEY=sk-your-openai-key
STRIPE_SECRET_KEY=sk_test_your-stripe-key
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@flowlet.com
EMAIL_ENABLED=false

# SMS Configuration
SMS_ENABLED=false
SMS_PROVIDER=console
SMS_FROM_NUMBER=+10000000000
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token

# ACH Configuration
ACH_ENABLED=true
ACH_MOCK_MODE=true
ACH_COMPANY_NAME=Flowlet
ACH_COMPANY_ID=your-company-id

# Feature Flags
FRAUD_DETECTION_ENABLED=true
KYC_VERIFICATION_REQUIRED=true
AML_MONITORING_ENABLED=true
SANCTIONS_SCREENING_ENABLED=true
SANCTIONS_MOCK_MODE=true

# Monitoring
ERROR_TRACKING_ENABLED=true
METRICS_ENABLED=true

# Encryption
ENCRYPTION_KEY=generate-with-fernet-key-or-leave-blank-for-auto
