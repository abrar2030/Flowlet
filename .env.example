# Flowlet Environment Variables Example

# ==============================================================================
# CORE APPLICATION SETTINGS
# ==============================================================================

# A secret key for session management and security. MUST be a long, random string.
# Used by Flask/Django/etc.
SECRET_KEY=a_very_long_and_random_secret_key_for_flowlet

# A separate secret key for JWT token signing. MUST be a long, random string.
JWT_SECRET_KEY=a_separate_long_and_random_jwt_secret

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# The connection string for the main PostgreSQL database.
# Format: postgresql://<user>:<password>@<host>:<port>/<database>
DATABASE_URL=postgresql://flowlet_user:secure_password@localhost:5432/flowlet_db

# The password for the PostgreSQL user (used in docker-compose setup)
POSTGRES_PASSWORD=secure_password

# Redis connection URL for caching and session management
REDIS_URL=redis://localhost:6379/0

# ==============================================================================
# EXTERNAL SERVICE INTEGRATIONS
# ==============================================================================

# Plaid API Credentials (for bank account linking)
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
# PLAID_ENV can be 'sandbox', 'development', or 'production'
PLAID_ENV=sandbox

# Stripe API Credentials (for payment processing)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Exchange Rate API Key (for multi-currency features)
EXCHANGE_RATE_API_KEY=your_primary_exchange_rate_api_key
BACKUP_EXCHANGE_RATE_API_KEY=your_backup_exchange_rate_api_key

# Other Payment Integration Keys (ACH, Wire, SEPA)
ACH_API_KEY=your_ach_api_key
ACH_API_SECRET=your_ach_api_secret
WIRE_API_KEY=your_wire_api_key
SEPA_API_KEY=your_sepa_api_key

# ==============================================================================
# FRONTEND SETTINGS (VITE)
# ==============================================================================

# The base URL for the backend API
VITE_API_BASE_URL=http://localhost:5000

# Stripe Publishable Key (safe to be public)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# ==============================================================================
# OTHER SETTINGS
# ==============================================================================

# CORS origins for the backend (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging level (e.g., INFO, DEBUG, WARNING, ERROR)
LOG_LEVEL=INFO
